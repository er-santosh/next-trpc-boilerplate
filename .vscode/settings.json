{
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.sortMembers": "explicit",
    "source.organizeImports.biome": "explicit",
    "source.addMissingImports": "explicit"
  },
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontLigatures": true,
  "editor.fontFamily": "MesloLGS NF",
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "prettier.ignorePath": ".gitignore",
  "prettier.semi": true,
  "prettier.singleQuote": false,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "all",
  "prettier.bracketSpacing": true,
  "prettier.endOfLine": "lf",
  "prettier.printWidth": 80,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.env.windows": {},
  "terminal.integrated.env.linux": {},
  "terminal.integrated.allowedLinkSchemes": [
    "file",
    "http",
    "https",
    "mailto",
    "vscode",
    "vscode-insiders",
    "docker-desktop"
  ],
  "workbench.startupEditor": "none",
  "workbench.preferredDarkColorTheme": "One Dark Pro",
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.commandPalette.experimental.suggestCommands": true,
  "workbench.preferredHighContrastColorTheme": "One Dark Pro Darker",
  "workbench.editorAssociations": {
    "*.md": "vscode.markdown.preview.editor"
  },
  "window.autoDetectColorScheme": true,
  "autoimport.useSemiColon": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "redhat.telemetry.enabled": false,
  "errorLens.excludeBySource": ["eslint(@typescript-eslint/no-unnecessary-type-assertion)"],
  "explorer.confirmPasteNative": false,
  "cSpell.userWords": [],
  "cSpell.ignoreWords": [],
  "typescript.tsdk": "node_modules/typescript/lib", // Use the workspace version of TypeScript
  "typescript.enablePromptUseWorkspaceTsdk": true, // For security reasons it's require that users opt into using the workspace version of typescript
  "typescript.format.insertSpaceAfterConstructor": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.preferTypeOnlyAutoImports": true, // Prefer type-only imports
  "typescript.preferences.autoImportFileExcludePatterns": [
    // useRouter should be imported from `next/navigation` instead of `next/router`
    "next/router.d.ts",
    "next/dist/client/router.d.ts"
  ],
  "typescript.referencesCodeLens.showOnAllFunctions": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.format.semicolons": "remove",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.format.semicolons": "remove",
  "[dockercompose]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "css.customData": [".vscode/tailwind.json"],
  "cSpell.words": [
    "commitlint",
    "eslintcache",
    "eslintjscache",
    "eslintmdcache",
    "hocs",
    "luxon",
    "prettiercache",
    "Shadcn",
    "stylelintcache",
    "turbopack",
    "Turso"
  ]
}
